<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ALBNAApp"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Main</item>
        <item name="colorPrimaryVariant">@color/Main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LGBlue1</item>
        <item name="colorSecondaryVariant">@color/StatusBarColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Texts Start -->
    <style name="CompanyText">
        <item name="android:fontFamily">@font/omnes_semi_bold</item>
        <item name="android:textSize">@dimen/CompanyTextSize</item>
        <item name="android:textColor">@color/Main</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/omnes_mid</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:textColor">@color/Main</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextWhite">
        <item name="android:fontFamily">@font/omnes_mid</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextLtMain">
        <item name="android:fontFamily">@font/omnes_mid</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:textColor">@color/LtMain</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteHeaderText">
        <item name="android:fontFamily">@font/omnes_mid</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:textColor">@color/Main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bottom_line_border</item>
    </style>

    <style name="MediumTextLtMain">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/MediumSize</item>
        <item name="android:textColor">@color/LtMain</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MediumTextWhite">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/MediumSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/MediumSize</item>
        <item name="android:textColor">@color/Main</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalText">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/NormalSize</item>
        <item name="android:textColor">@color/Main</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalTextLtMain">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/NormalSize</item>
        <item name="android:textColor">@color/LtMain</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalTextWhite">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/NormalSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HintText">
        <item name="android:fontFamily">@font/omnes_thin</item>
        <item name="android:textSize">@dimen/HintSize</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Texts End -->

    <!-- Button Start -->
    <style name="BlueButton">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/TextInButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_1_8</item>
        <item name="cornerRadius">@dimen/_5_40</item>
    </style>

    <style name="GreyButton">
        <item name="android:fontFamily">@font/omnes_light</item>
        <item name="android:textSize">@dimen/TextInButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/grey_day</item>
    </style>
    <!-- Button End -->

    <!-- Shapes Start -->
    <style name="BackLayout">
        <item name="android:background">@drawable/login_background</item>
    </style>

    <style name="IntroBackLayout">
        <item name="android:background">@drawable/intro_background</item>
    </style>
    <!-- Shapes End -->

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>