<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppForTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/LtMain</item>
        <item name="colorPrimaryVariant">@color/LtMain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LtMain</item>
        <item name="colorSecondaryVariant">@color/DkGrey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CompanyTextStyle">
        <item name="android:fontFamily">@font/a_jannat_lt_bold</item>
        <item name="android:textSize">@dimen/CompanyText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInButtonStyle">
        <item name="android:fontFamily">@font/coconnextarabic_light</item>
        <item name="android:textSize">@dimen/TextInButton</item>
        <item name="android:textColor">@color/LtMain</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/coconnextarabic_light</item>
        <item name="android:textSize">@dimen/TitleText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlueHeaderTextStyle">
        <item name="android:fontFamily">@font/coconnextarabic_light</item>
        <item name="android:textSize">@dimen/BigTitleText</item>
        <item name="android:textColor">@color/white</item>.
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/DkGrey</item>
    </style>

    <style name="WhiteHeaderTextStyle">
        <item name="android:fontFamily">@font/coconnextarabic_light</item>
        <item name="android:textSize">@dimen/TitleText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/DkGrey</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:fontFamily">@font/coconnextarabic_light</item>
        <item name="android:textSize">@dimen/HintText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalStyle">
        <item name="android:fontFamily">@font/coconnextarabic_light</item>
        <item name="android:textSize">@dimen/NormalText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlueButtonStyle">
        <item name="android:fontFamily">@font/cocon_nextarabic_regular</item>
        <item name="android:textSize">@dimen/TextInButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/Space1_8</item>
    </style>

    <style name="GreyButtonStyle">
        <item name="android:fontFamily">@font/cocon_nextarabic_regular</item>
        <item name="android:textSize">@dimen/TextInButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/grey_night</item>
    </style>

    <style name="BackLayout">
        <item name="android:background">@drawable/login_background_night</item>
    </style>

    <style name="IntroBackLayout">
        <item name="android:background">@drawable/intro_background_night</item>
    </style>
</resources>